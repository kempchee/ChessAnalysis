<%=javascript_tag do%>
$("document").ready(function(){
	

var height=$(".centered-user-interface").height();
windowHeight=$(window).height();

$(".centered-user-interface").css("top",(windowHeight-height)/2-70);
})
<%end%>
<br>
<div class="centered-user-interface well col-xs-6 col-sm-6 col-md-6  col-lg-6 col-xs-offset-3 col-sm-offset-3  col-md-offset-3 col-lg-offset-3">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html:{class:"form-horizontal col-xs-12 col-sm-12 col-md-12  col-lg-12"}) do |f| %>
<h2 class="col-xs-12 col-sm-12 col-md-12  col-lg-12 text-center">Sign in</h2>
  <div class="form-group"><%= f.label :email,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3" %>
  <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.email_field :email, :autofocus => true,class:"form-control"%></div>
  <div class="col-xs-1 col-sm-1 col-md-1  col-lg-1"></div></div>

  <div class="form-group"><%= f.label :password,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3" %>
  <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.password_field :password, class:"form-control"%>
    <div class="col-xs-1 col-sm-1 col-md-1  col-lg-1"></div></div></div>

  <% if devise_mapping.rememberable? -%>
    <div class="text-center col-xs-12 col-sm-12 col-md-12  col-lg-12"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="text-center col-xs-12 col-sm-12 col-md-12  col-lg-12"><%= f.submit "Sign in" %></div>
<% end %>
<div class="float-clear"></div>
	<br>
<div class=" col-xs-12 col-sm-12 col-md-12  col-lg-12"><%= render "devise/shared/links" %></div>

</div>
<div class="col-xs-3 col-sm-3 col-md-3  col-lg-3"></div>