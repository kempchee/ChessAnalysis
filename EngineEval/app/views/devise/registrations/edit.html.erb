           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.text_field :chess_com,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2">
              <div class="checkbox">
              <label>
                <%= f.check_box :chesscom_privacy %>Make Public
              </label>
            </div>
           </div></div>

          <div class="form-group"><%= f.label :playchess,"Playchess Handle",class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %> 
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.text_field :playchess,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2">
              <div class="checkbox">
              <label>
                <%= f.check_box :playchess_privacy %>Make Public
              </label>
            </div>
           </div></div>-->

          <div class="form-group"><%= f.label :other,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %> 
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.text_area :other,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"> 
            <div class="checkbox">
              <label>
