        </div>
       </div></div>



          <div class="form-group"><%= f.label :email,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %>
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.email_field :email,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2">
              <div class="checkbox">
              <label>
                <%= f.check_box :email_privacy %>Public
              </label>
            </div>
           </div></div>

           <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>



          <div class="form-group"><%= f.label :location,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %> 
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.text_field :location,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"> 
           <div class="checkbox">
              <label>
                <%= f.check_box :location_privacy %>Public
              </label>
            </div></div></div>

          <div class="form-group"><%= f.label :rating,{},class:" control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %>
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.select :rating,options_for_select(user_rating_select,current_user.rating),{},class:"form-control"%></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2">
              <div class="checkbox">
              <label>
                <%= f.check_box :rating_privacy %>Public
