  <div id="userOptions" class="tab-pane active fade in col-xs-12 col-sm-12 col-md-12  col-lg-12">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,id:"edit-user-form",class:"col-xs-12 col-sm-12 col-md-12  col-lg-12 form-horizontal" }) do |f| %>
      <div class="errors-one"><%= devise_error_messages! %></div>
   
      <br>

          <div class="form-group"><%= f.label :current_password,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %> 
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.password_field :current_password,class:"form-control",placeholder:"Required",autofocus:true %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div></div>

          <div class="form-group"><%= f.label :new_password,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3" %> 
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.password_field :password, :autocomplete => "off",class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div></div>

          <div class="form-group"><%= f.label :confirm_password,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3" %>
           <div class="col-xs-7 col-sm-7 col-md-7  col-lg-7"><%= f.password_field :password_confirmation,class:"form-control" %></div><div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"></div></div>



<div class="form-group "><%= f.label :first_name,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %>
