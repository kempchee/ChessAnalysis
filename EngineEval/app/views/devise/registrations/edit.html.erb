          <div class="checkbox">
          <label>
            <%= f.check_box :first_name_privacy %> Public
          </label>
        </div>
       </div></div>

       <div class="form-group"><%= f.label :last_name,{},class:"control-label col-xs-3 col-sm-3 col-md-3  col-lg-3"  %>
