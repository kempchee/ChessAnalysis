{{#if isAuthenticated}}
      <div class="input-group ">
                <a  class="input-group-btn ">
                 <button class=" btn btn-default positional-tag-button" {{action "tagPositional"}}> <i class="glyphicon glyphicon-tag"></i> Tag</button>
                </a>
        <select class="form-control positional-tag-select tag-select">
         
          <option value="Open File">Open File</option>
          <option value="Weak Back-Rank">Weak Back-Rank</option>
          <option value="Outpost">Outpost</option>

        </select>
         	<a class="input-group-addon positional-untag-button btn btn-default" {{action "untagPositional"}}> <i class="glyphicon glyphicon-trash"></i> Untag
         	</a>
         

      </div>

      {{else}}
      <div class="input-group">
               <a  class="input-group-btn ">
                 <button class=" btn btn-default positional-tag-button" {{action "alertSignIn"}}> <i class="glyphicon glyphicon-tag"></i> Tag</button>
                </a>
                
        <select class="form-control positional-tag-select tag-select">
         
          <option value="Open File">Open File</option>
          <option value="Weak Back-Rank">Weak Back-Rank</option>
          <option value="Outpost">Outpost</option>

        </select>     <a class="input-group-addon positional-untag-button btn btn-default" {{action "alertSignIn"}}> <i class="glyphicon glyphicon-trash"></i> Untag
          </a>

      </div>
{{/if}}

<ul class="tags">
{{#each}}
<li class="position-tag" >
    <a >
		<span class="badge pull-right">{{this.[1]}}</span>
        {{this.[0]}}
    </a>
</li>
{{/each}}
</ul>